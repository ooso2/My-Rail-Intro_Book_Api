<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Subjects</h1>
        <%= link_to "Add New Subject", new_subject_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>

  <div class="row">
    <% @subjects.each do |subject| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= link_to subject.name, subject_path(subject) %></h5>
            <p class="card-text">
              <strong>Books:</strong> <%= subject.books.count %>
            </p>
            
            <% if subject.description.present? %>
              <p class="card-text"><%= truncate(subject.description, length: 100) %></p>
            <% end %>
          </div>
          <div class="card-footer">
            <%= link_to "View Details", subject_path(subject), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @subjects.empty? %>
    <div class="row">
      <div class="col-12 text-center">
        <p class="text-muted">No subjects found.</p>
        <%= link_to "Add the first subject", new_subject_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
