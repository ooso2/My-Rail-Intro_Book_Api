<div class="container">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Subjects", subjects_path %></li>
          <li class="breadcrumb-item active" aria-current="page"><%= @subject.name %></li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <h1><%= @subject.name %></h1>
      
      <div class="card mb-4">
        <div class="card-body">
          <p><strong>Total Books:</strong> <%= @subject.books.count %></p>
          
          <% if @subject.description.present? %>
            <hr>
            <h5>Description</h5>
            <p><%= @subject.description %></p>
          <% end %>
        </div>
      </div>

      <!-- Books Section -->
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Books in <%= @subject.name %></h5>
          <%= link_to "Add New Book", new_book_path, class: "btn btn-primary btn-sm" %>
        </div>
        <div class="card-body">
          <% if @books.any? %>
            <div class="row">
              <% @books.each do |book| %>
                <div class="col-md-6 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <h6 class="card-title"><%= link_to book.title, book_path(book) %></h6>
                      <p class="card-text">
                        <small class="text-muted">
                          By: <%= link_to book.author.name, author_path(book.author) %><br>
                          Published: <%= book.publish_date&.strftime("%Y") %><br>
                          ISBN: <%= book.isbn %>
                        </small>
                      </p>
                      <p class="card-text"><%= truncate(book.description, length: 80) %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">No books found in this subject.</p>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Actions</h6>
        </div>
        <div class="card-body">
          <%= link_to "Edit Subject", edit_subject_path(@subject), class: "btn btn-warning btn-sm mb-2 w-100" %>
          <%= link_to "Delete Subject", subject_path(@subject), 
              method: :delete, 
              data: { confirm: "Are you sure? This will remove the subject from all books." }, 
              class: "btn btn-danger btn-sm w-100" %>
        </div>
      </div>
    </div>
  </div>
</div>
