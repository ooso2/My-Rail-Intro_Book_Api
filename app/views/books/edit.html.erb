<div class="container">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Books", books_path %></li>
          <li class="breadcrumb-item"><%= link_to @book.title, book_path(@book) %></li>
          <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">
      <h1>Edit Book</h1>
      
      <div class="card">
        <div class="card-body">
          <%= form_with model: @book, local: true do |form| %>
            <% if @book.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h4>
                <ul>
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :title, class: "form-label" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :isbn, class: "form-label" %>
              <%= form.text_field :isbn, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :publish_date, class: "form-label" %>
              <%= form.date_field :publish_date, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :author_id, "Author", class: "form-label" %>
              <%= form.collection_select :author_id, @authors, :id, :name, 
                  { prompt: "Select an author" }, { class: "form-control" } %>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, rows: 4, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :subject_ids, "Subjects", class: "form-label" %>
              <%= form.collection_check_boxes :subject_ids, @subjects, :id, :name do |b| %>
                <div class="form-check">
                  <%= b.check_box(class: "form-check-input") %>
                  <%= b.label(class: "form-check-label") %>
                </div>
              <% end %>
            </div>

            <div class="d-flex gap-2">
              <%= form.submit "Update Book", class: "btn btn-primary" %>
              <%= link_to "Cancel", book_path(@book), class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h6 class="mb-0">Quick Actions</h6>
        </div>
        <div class="card-body">
          <%= link_to "View Book", book_path(@book), class: "btn btn-outline-primary btn-sm mb-2 w-100" %>
          <%= link_to "Add Review", new_book_review_path(@book), class: "btn btn-outline-success btn-sm w-100" %>
        </div>
      </div>
    </div>
  </div>
</div> 